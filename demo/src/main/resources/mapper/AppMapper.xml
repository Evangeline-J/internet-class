<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.app.mapper.AppMapper">

    <!-- 结果映射：定义数据库字段与 Java 属性的对应关系 -->
    <resultMap id="AppResultMap" type="AppEntity">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="fullDescription" column="full_description"/>
        <result property="avatar" column="avatar"/>
        <result property="category" column="category"/>
        <result property="price" column="price"/>
        <result property="rating" column="rating"/>
        <result property="downloads" column="downloads"/>
        <result property="reviews" column="reviews"/>
        <result property="author" column="author"/>
        <result property="publishedAt" column="published_at"/>
    </resultMap>

    <!-- 查询所有应用 -->
    <select id="findAllOrderById" resultMap="AppResultMap">
        SELECT * FROM t_app ORDER BY id ASC
    </select>

    <!-- 根据 ID 查询 -->
    <select id="findById" resultMap="AppResultMap">
        SELECT * FROM t_app WHERE id = #{id}
    </select>

    <!-- 根据分类查询 -->
    <select id="findByCategory" resultMap="AppResultMap">
        SELECT * FROM t_app WHERE category = #{category} ORDER BY id ASC
    </select>

    <!-- 04新增：分页 + 排序（使用白名单 choose，避免 ORDER BY 注入） -->
    <select id="findPageSorted" resultMap="AppResultMap">
        SELECT
        id,
        name,
        `description`,
        full_description,
        avatar,
        category,
        price,
        rating,
        downloads,
        reviews,
        author,
        published_at
        FROM t_app
        <choose>
            <when test="sort == 'rating'">
                ORDER BY rating
            </when>
            <when test="sort == 'downloads'">
                ORDER BY downloads
            </when>
            <when test="sort == 'published_at'">
                ORDER BY published_at
            </when>
            <otherwise>
                ORDER BY id
            </otherwise>
        </choose>
        <choose>
            <when test="order == 'asc'"> ASC </when>
            <otherwise> DESC </otherwise>
        </choose>
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <!-- 04新增：总记录数 -->
    <select id="countAll" resultType="long">
        SELECT COUNT(*) FROM t_app
    </select>

</mapper>